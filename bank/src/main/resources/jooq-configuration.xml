<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.13.0.xsd">
    <generator>
        <database>
            <name>org.jooq.meta.extensions.liquibase.LiquibaseDatabase</name>
            <properties>
                <property>
                    <key>scripts</key>
                    <value>bank/src/main/resources/db-changelog.xml</value>
                </property>
                <property>
                    <key>includeLiquibaseTables</key>
                    <value>true</value>
                </property>
                <property>
                    <key>database.liquibaseSchemaName</key>
                    <value>PUBLIC</value>
                </property>
            </properties>

            <inputCatalog/>
            <inputSchema>PUBLIC</inputSchema>
            <outputSchemaToDefault>true</outputSchemaToDefault>
            <includes>.*</includes>
            <excludes>DATABASECHANGELOG.*</excludes>

            <forcedTypes>
                <forcedType>
                    <expression>user_id|transferred_from|transferred_to</expression>
                    <userType>org.easybank.aggregate.UserId</userType>
                    <converter>org.easybank.aggregate.UserId.JooqUserIdConverter</converter>
                </forcedType>
                <forcedType>
                    <includeExpression>transaction_id</includeExpression>
                    <userType>org.easybank.aggregate.TransactionId</userType>
                    <converter>org.easybank.aggregate.TransactionId.JooqTransactionIdConverter</converter>
                </forcedType>
                <forcedType>
                    <includeExpression>currency</includeExpression>
                    <userType>org.easybank.type.Currency</userType>
                    <enumConverter>true</enumConverter>
                </forcedType>
                <forcedType>
                    <includeExpression>transaction.status</includeExpression>
                    <userType>org.easybank.type.TransactionStatus</userType>
                    <enumConverter>true</enumConverter>
                </forcedType>
                <forcedType>
                    <includeExpression>transaction.type</includeExpression>
                    <userType>org.easybank.type.TransactionType</userType>
                    <enumConverter>true</enumConverter>
                </forcedType>
            </forcedTypes>
        </database>

        <generate>
            <pojos>true</pojos>
            <globalObjectReferences>false</globalObjectReferences>
            <fluentSetters>true</fluentSetters>
            <immutablePojos>false</immutablePojos>
            <pojosEqualsAndHashCode>true</pojosEqualsAndHashCode>
        </generate>

        <target>
            <packageName>org.easybank.model</packageName>
            <directory>../domain/src/main/java</directory>
        </target>
    </generator>
</configuration>